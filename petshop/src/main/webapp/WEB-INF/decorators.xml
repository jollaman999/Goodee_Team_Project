<?xml version="1.0" encoding="UTF-8" ?>
<decorators defaultdir="/decorator">
    <decorator name="main" page="decorator.jsp">
        <pattern>/index.jsp</pattern>
        <pattern>*.shop</pattern>
    </decorator>

    <decorator name="board" page="decorator_board.jsp">
        <pattern>/board/*</pattern>
    </decorator>

    <decorator name="nomaincss" page="decorator_nomaincss.jsp">
        <pattern>/basket/view.shop</pattern>
    </decorator>
    
    <decorator name="nomargin" page="decorator_nomargin.jsp">
        <pattern>/member/login.shop</pattern>
        <pattern>/member/find_*</pattern>
    </decorator>

    <!-- 제외 설정 -->
    <excludes>
        <pattern>/member/*check*</pattern>
        <pattern>/board/imgupload*</pattern>
        <pattern>/admin/graph*</pattern>
    </excludes>
</decorators>